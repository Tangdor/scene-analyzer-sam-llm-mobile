<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to DetectAsk"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/goToSegmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analyze Image" />

    <Button
        android:id="@+id/goToLiveServerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live via Server"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/goToLiveLocalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live via Local Model"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/goToAssistantButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Assistant"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/goToVideoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎞️ Analyze Video"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/goToRecordingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎥 Record + Sensors"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/evalLocalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="▶️ Eval: Local (YOLOE + LLM)"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/evalServerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="▶️ Eval: Server (Remote)"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/evalStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bereit"
        android:textSize="16sp"
        android:padding="8dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        />


</LinearLayout>
