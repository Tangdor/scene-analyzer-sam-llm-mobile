<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#111"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Capture Button -->
    <Button
        android:id="@+id/captureImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📸 CAPTURE PHOTO"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:backgroundTint="#BB86FC"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <!-- Image and Mask -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#222"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/resultImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <com.example.detectask.ui.views.OverlayView
            android:id="@+id/overlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Prompt input -->
    <EditText
        android:id="@+id/promptEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="🔎 Filter by object (e.g. person, dog)"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- Labels and output -->
    <TextView
        android:id="@+id/labelsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No objects detected yet"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:textAlignment="center" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/serverButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🌐 ANALYZE\nSERVER"
            android:textAlignment="center"
            android:textColor="#000000"
            android:backgroundTint="#BB86FC"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/localButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🧠 ANALYZE\nLOCALLY"
            android:textAlignment="center"
            android:textColor="#000000"
            android:backgroundTint="#BB86FC"
            android:textAllCaps="false"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
